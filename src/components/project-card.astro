---
import type { CollectionEntry } from 'astro:content';
const { title, description, image } = Astro.props.project;
---

<div class="flex gap-4 bg-second rounded-2xl p-4">
  <img src={image} alt={title} class="w-16 h-16 bg-white rounded-md" />
  <div>
    <h3 class="text-lg font-semibold">{title}</h3>
    <p class="text-sm text-gray-300">
      {description}
    </p>
  </div>
</div>

