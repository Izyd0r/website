---
import SectionTitle from "./section-title.astro";
import { Icon } from "astro-icon/components";
---

<section
    id="contact"
    class="bg-main text-white lg:px-100 py-12 component-block my-80 scroll-mt-5"
>
    <SectionTitle title="Contact" />
    <p class="text-center text-3xl">Feel free to reach out via:</p>
    <div class="flex justify-center gap-10 mt-8">
        <div
            class="w-60 h-60 bg-third rounded-full flex items-center justify-center text-xl"
        >
            <Icon name="linkedin1" size="20rem" />
        </div>

        <div
            class="w-60 h-60 bg-third rounded-full flex items-center justify-center text-xl"
        >
            <Icon name="github1" size="20rem" />
        </div>

        <div
            class="w-60 h-60 bg-third rounded-full flex items-center justify-center text-xl"
        > 
            <Icon name="email1" size="20rem" />
        </div>
    </div>
</section>
